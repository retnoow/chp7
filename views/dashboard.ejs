<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header') %>
</head>

<body>
    <%- include('./partials/navbar') %>

    <div class="container">
        <br><br>
        <h2 class="mt-5 text-center">Data Users</h2>
        <div class="row mt-5">
            <table class="table table-secondary">
                <thead>
                  <tr>
                    <tr>
                        <th>Username</th>
                        <th class="text-center col-md-6">Password</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Birthplace</th>
                        <th>Action</th>
                  </tr>
                </thead>
                <% users.forEach(user => { %>
     
                <tbody>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.password %></td>
                        <td><%= user.user_game_biodatum.first_name %></td>
                        <td><%= user.user_game_biodatum.last_name %></td>
                        <td><%= user.user_game_biodatum.birthplace %></td>
                        <td>
                            <a href="/user/<%= user.id %>/delete" onclick="confirm ('Want to delete this data?') || event.preventDefault()"><img src="../public/delete-icon.png" alt="delete"></a>
                            <a href="/user/<%= user.id %>/edit"><img src="../public/edit-icon.png" alt="edit"></a>
                        </td>
                    </tr>
                    <% }) %>              
                </tbody>
              </table>
        </div>
        <br>
        <a class="btn btn-primary" href="/add" role="button">Add New User</a>
    </div>
</body>


</html>

